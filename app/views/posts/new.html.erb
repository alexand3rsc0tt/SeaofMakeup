<h1> New Post </h1>
<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control text-title', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'ckeditor', required: true %>
  </div>

  <%= f.submit 'Create', class: 'btn btn-default' %>
<% end %>
