<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control text-title', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.cktext_area :body, :ckeditor => {:uiColor => '#3333FF'} %>
  </div>

  <%= f.submit 'Create', class: 'btn btn-default' %>
<% end %>
