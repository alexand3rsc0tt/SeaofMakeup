<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.text_field :title, class: 'form-control text-title', placeholder: 'Title',required: true %>
  </div>

  <div class="form-group">
    <%= f.cktext_area :body, :ckeditor => {:uiColor => '#3333FF', :toolbar => 'spellchecker'} %>
  </div>

  <%= f.submit 'Create', class: 'btn btn-default' %>
<% end %>
