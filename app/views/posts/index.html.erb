<% if admin_signed_in? %>
  <p><%= link_to "New Post", new_post_path, class: 'btn btn-primary new' %></p>
<% else %>

<% end %>
<% @posts.each do |post| %>

<div class="form-container posts">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2><%= post.title %></h2>
    </div>
  </div>
  <div class="panel-body">
    <p><%= post.body %></p>
  </div>
  <div class='panel-footer'>
    <%= link_to "Show post", post_path(post.id), class: 'btn btn-primary' %>

    <% if admin_signed_in? %>
      <%= link_to "Edit post", edit_post_path(post.id), class: 'btn btn-primary' %>
      <%= link_to "Delete", post, method: :delete, class: 'btn btn-danger' %>
    <% else %>

    <% end %>
  </div>
</div>
<% end %>
<div class="paginate">
  <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
</div>
